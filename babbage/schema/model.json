{
    "$schema": "http://json-schema.org/schema",
    "title": "Babbage Model",
    "type": "object",

    "properties": {
        "name": {"type": "string"},
        "measures": {"$ref": "#/definitions/measures"},
        "dimensions": {"$ref": "#/definitions/dimensions"},
        "mappings": {"type": "object"},
        "joins": {"type": "array"}
    },
    "additionalProperties": false,
    "definitions": {
        "dimensions": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z][a-zA-Z0-9_]*[a-zA-Z0-9]$": {
                    "$ref": "#/definitions/dimension"
                }
            },
            "additionalProperties": false
        },
        "dimension": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                }
            }
        },
        "measures": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z][a-zA-Z0-9_]*[a-zA-Z0-9]$": {
                    "$ref": "#/definitions/measure"
                }
            },
            "additionalProperties": false
        },
        "measure": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                }
            }
        }
    }
}
