{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Babbage Model",
    "type": "object",

    "properties": {
        "name": {"type": "string"},
        "measures": {"$ref": "#/definitions/measures"},
        "dimensions": {"$ref": "#/definitions/dimensions"},
        "mappings": {"type": "object"},
        "joins": {"type": "array"}
    },
    "additionalProperties": false,
    "definitions": {
        "label": {
            "type": "string",
            "minLength": 2,
            "maxLength": 20
        },
        "dimensions": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z][a-zA-Z0-9_]*[a-zA-Z0-9]$": {
                    "$ref": "#/definitions/dimension"
                }
            },
            "additionalProperties": false
        },
        "dimension": {
            "type": "object",
            "properties": {
                "label": {
                    "$ref": "#/definitions/label"
                }
            },
            "required": ["label"]
        },
        "measures": {
            "type": "object",
            "minProperties": 1,
            "patternProperties": {
                "^[a-zA-Z][a-zA-Z0-9_]*[a-zA-Z0-9]$": {
                    "$ref": "#/definitions/measure"
                }
            },
            "additionalProperties": false
        },
        "measure": {
            "type": "object",
            "properties": {
                "label": {
                    "$ref": "#/definitions/label"
                }
            },
            "required": ["label"]
        }
    }
}
